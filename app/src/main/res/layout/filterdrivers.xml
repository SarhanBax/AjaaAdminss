<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/linearlayoutfilter"
    tools:context=".DriverfilterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/yellow"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/filterdriverimage"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_person">

        </ImageView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/filterdrivername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:textColor="@color/textcolor"
                    android:textSize="20sp"
                    android:text="sarhan"/>

                <TextView
                    android:id="@+id/filterdrivercontact"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"

                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor"
                    android:textSize="20sp"
                    android:text="8155094219"/>

                <TextView
                    android:id="@+id/filterdrivervehicletype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor"
                    android:textSize="20sp"
                    android:layout_marginLeft="10dp"

                    android:text="Car"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/filterdrivercarcategory"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor"
                    android:textSize="20sp"
                    android:text="sedan"/>

                <TextView
                    android:id="@+id/approvel"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textcolor"
                    android:textSize="20sp"
                    android:text="Pending"/>



            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>