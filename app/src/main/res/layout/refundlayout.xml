<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="5dp"

    android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/refunddate"
        android:text="2020-02-15"
        android:textColor="@color/textcolor"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Type: "
        android:layout_marginLeft="5dp"
        android:textColor="@color/textcolor"
        android:textSize="20sp"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/refundusertype"
        android:text="Passenger"
        android:layout_marginLeft="5dp"
        android:textColor="@color/textcolor"
        android:textSize="20sp"
        android:layout_marginTop="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Source: "
            android:layout_marginLeft="5dp"
            android:textColor="@color/textcolor"
            android:textSize="20sp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/refundsourceaddress"
            android:text="Passenger"
            android:layout_marginLeft="5dp"
            android:textColor="@color/textcolor"
            android:textSize="20sp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destination:"
            android:layout_marginLeft="5dp"
            android:textColor="@color/textcolor"
            android:textSize="20sp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/refunddestination"
            android:text="Passenger"
            android:layout_marginLeft="5dp"
            android:textColor="@color/textcolor"
            android:textSize="20sp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Car Type: "
            android:layout_marginLeft="5dp"
            android:textColor="@color/textcolor"
            android:textSize="20sp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/refundcartype"
            android:text="Passenger"
            android:layout_marginLeft="5dp"
            android:textColor="@color/textcolor"
            android:textSize="20sp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fare:"
            android:layout_marginLeft="5dp"
            android:textColor="@color/textcolor"
            android:textSize="20sp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/refundfare"
            android:text="Passenger"
            android:layout_marginLeft="5dp"
            android:textColor="@color/textcolor"
            android:textSize="20sp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Booked time:"
            android:layout_marginLeft="5dp"
            android:textColor="@color/textcolor"
            android:textSize="20sp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/refundbooktime"
            android:text="Passenger"
            android:layout_marginLeft="5dp"
            android:textColor="@color/textcolor"
            android:textSize="20sp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book date:"
            android:layout_marginLeft="5dp"
            android:textColor="@color/textcolor"
            android:textSize="20sp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/refundbookdate"
            android:text="Passenger"
            android:layout_marginLeft="5dp"
            android:textColor="@color/textcolor"
            android:textSize="20sp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ride status:"
            android:layout_marginLeft="5dp"
            android:textColor="@color/textcolor"
            android:textSize="20sp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/refundridestatus"
            android:text="Passenger:"
            android:layout_marginLeft="5dp"
            android:textColor="@color/textcolor"
            android:textSize="20sp"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Canceled By: "
            android:layout_marginLeft="5dp"
            android:textColor="@color/textcolor"
            android:textSize="20sp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/refundcanceledby"
            android:text="Passenger:"
            android:layout_marginLeft="5dp"
            android:textColor="@color/textcolor"
            android:textSize="20sp"
            android:layout_marginTop="5dp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/diveder"/>
</LinearLayout>